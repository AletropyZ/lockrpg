<body>
    <nav class="bar">
        <label>LockRPG | Registro</label>
    </nav>
    <form action="/register" method="post">
        <h2>Registro</h2>
        <input required type="text" name="username" id="username" placeholder="Username" autocomplete="off">
        <input required type="text" name="email" id="email" placeholder="Seu Email" autocomplete="off">
        <input required type="password" name="password" id="password" placeholder="Senha" autocomplete="off">
        <input required type="password" name="repassword" id="repassword" placeholder="Confirmar Senha" autocomplete="off">
        <button type="submit">Registrar-se</button>
        <p>JÃ¡ tem uma conta? <a href="/login">Clique aqui</a> para fazer login</p>
    </form>
</body>
</html>